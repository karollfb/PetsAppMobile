<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetalhesServicosActivity"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="-50dp"
        app:cardElevation="0dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/teste_img"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#6AFFBF9B"/>

    </androidx.cardview.widget.CardView>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome do serviço"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/dark"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cuidamos do seu pet 24h por dia, incluindo banho e tosa, junto de comida e uma boa hospedagem. (descrição)"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_margin="20dp"
        android:textColor="@color/textDetails"/>

    <androidx.cardview.widget.CardView
        android:layout_width="330dp"
        android:layout_height="60dp"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardElevation="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="36dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="13dp"
            android:src="@drawable/ic_pagamento" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="18dp"
            android:text="R$50,00"
            android:textColor="@color/dark"
            android:textSize="18sp" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="24dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_comment" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:text="Gostaria de adicionar alguma observação?"
            android:textColor="@color/dark"
            android:textSize="14sp" />

    </LinearLayout>

        <EditText
            android:layout_width="330dp"
            android:layout_height="110dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:textSize="16sp"
            android:paddingLeft="20dp"
            android:paddingBottom="50dp"
            android:background="@drawable/edit_text_observacao"
            android:hint="Digite sua observação aqui..." />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:background="@color/light"
        android:elevation="10dp">

        <Button
            android:id="@+id/button_voltar"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:text="Voltar"
            android:textStyle="bold"
            android:textSize="16sp"
            android:background="@color/light"
            style="?android:attr/borderlessButtonStyle"/>

        <Button
            android:id="@+id/button_agendar_servico"
            android:layout_width="190dp"
            android:layout_height="match_parent"
            android:text="Agendar Serviço"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/light"
            android:background="@drawable/button_agendar_servico"
            style="?android:attr/borderlessButtonStyle"/>

    </LinearLayout>


</LinearLayout>