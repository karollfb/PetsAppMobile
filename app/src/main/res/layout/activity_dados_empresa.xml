<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DadosEmpresaActivity"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="480dp"
            android:background="@drawable/gradient_for_services"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:paddingTop="15dp">

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/ic_back_arrow"/>

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="250dp"
                    android:background="@drawable/ic_heart_add_favorite"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:paddingLeft="20dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="30dp">

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="50dp"
                    android:paddingTop="5dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_hearts"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/dark"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:text="5.0"
                        android:textSize="16sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="150dp"
                    android:paddingTop="5dp"
                    android:layout_marginLeft="10dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="140dp"
                        android:layout_height="130dp"
                        android:src="@color/dark"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:paddingTop="5dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="10dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_localition_distance"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/dark"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:text="2km"
                        android:textSize="16sp"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome da Empresa"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="@color/dark"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textAlignment="center"
                android:textColor="@color/dark"
                android:textSize="16sp"
                android:text="Dog house é uma empresa de hotel para cachorros, visamos o conforto do lazer de seus bichinhos... (Descrição)"/>

        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="330dp"
            android:layout_height="150dp"
            android:layout_marginTop="-100dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            app:cardCornerRadius="15dp">

            <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_height="50dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/colorAccent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_telefone"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(11) 94002-8922"
                    android:textColor="@color/dark"
                    android:textSize="16sp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="12dp"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_height="50dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/colorAccent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="85dp"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_location"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rua dolores, n°666, Jandira - SP"
                    android:textColor="@color/dark"
                    android:textSize="14sp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="15dp"/>

            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="330dp"
            android:layout_height="50dp"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@color/colorAccentDark"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            app:cardElevation="0dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_entregas"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Não fazemos serviços de entrega"
                android:textColor="@color/dark"
                android:textSize="16sp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="15dp"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Destaques"
            android:textColor="@color/dark"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:textSize="18sp"/>

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="25dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="170dp"
                        android:layout_height="180dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp"
                        android:layout_margin="10dp"
                        android:layout_marginTop="20dp"
                        app:cardBackgroundColor="@color/colorAccentDark">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/teste_img"
                            android:scaleType="centerCrop"/>

                    </androidx.cardview.widget.CardView>

                    <Button
                        android:id="@+id/button_ver_mais"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-20dp"
                        android:layout_marginLeft="30dp"
                        android:text="Ver mais"
                        android:textSize="16sp"
                        android:background="@drawable/button_ver_mais"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="25dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="170dp"
                        android:layout_height="180dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp"
                        android:layout_margin="10dp"
                        android:layout_marginTop="20dp"
                        app:cardBackgroundColor="@color/colorAccentDark">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/teste_img"
                            android:scaleType="centerCrop"/>

                    </androidx.cardview.widget.CardView>

                    <Button
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-20dp"
                        android:layout_marginLeft="30dp"
                        android:text="Ver mais"
                        android:textSize="16sp"
                        android:background="@drawable/button_ver_mais"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="25dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="170dp"
                        android:layout_height="180dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp"
                        android:layout_margin="10dp"
                        android:layout_marginTop="20dp"
                        app:cardBackgroundColor="@color/colorAccentDark">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/teste_img"
                            android:scaleType="centerCrop"/>

                    </androidx.cardview.widget.CardView>

                    <Button
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-20dp"
                        android:layout_marginLeft="30dp"
                        android:text="Ver mais"
                        android:textSize="16sp"
                        android:background="@drawable/button_ver_mais"/>


                </LinearLayout>

            </LinearLayout>

        </HorizontalScrollView>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Serviços"
            android:textColor="@color/dark"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textSize="18sp"/>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/ver_servicos"
                    android:layout_width="330dp"
                    android:layout_height="60dp"
                    app:cardCornerRadius="15dp"
                    app:cardBackgroundColor="@color/colorAccent"
                    app:cardElevation="0dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="40dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="13dp"
                        android:src="@drawable/teste_img_2" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="18dp"
                        android:text="Nome do serviço"
                        android:textColor="@color/dark"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="300dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/ic_arrow_details"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="330dp"
                    android:layout_height="60dp"
                    app:cardCornerRadius="15dp"
                    app:cardBackgroundColor="@color/colorAccent"
                    app:cardElevation="0dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="40dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="13dp"
                        android:src="@drawable/teste_img_2" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="18dp"
                        android:text="Nome do serviço"
                        android:textColor="@color/dark"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="300dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/ic_arrow_details"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</ScrollView>